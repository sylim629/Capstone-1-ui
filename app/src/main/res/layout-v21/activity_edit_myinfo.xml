<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mint"
        android:elevation="6dp"
        android:paddingBottom="10dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/title_register_extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/edit_my_info"
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/text_user_name"
                android:text="@string/name"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/name_temp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/id_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/name_extra"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/text_user_id"
                android:text="@string/id"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_user_id"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/name_extra"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/limlean590"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/uni_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/id_extra"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/uni_extra_input"
                android:text="@string/university"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/uni_extra_input"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/id_extra"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:hint="@string/search"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorHint="@color/light_gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/major_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/uni_extra"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/spinner_major"
                android:text="@string/major"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_major"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/uni_extra"
                android:background="@android:color/white"
                android:drawSelectorOnTop="true"
                android:padding="10dp"
                android:prompt="@string/choose" />

            <TextView
                android:id="@+id/comp_type_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/major_extra"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/spinner_company_type"
                android:text="@string/type_of_company"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_company_type"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/major_extra"
                android:background="@android:color/white"
                android:drawSelectorOnTop="true"
                android:padding="10dp"
                android:prompt="@string/choose" />

            <TextView
                android:id="@+id/text_duty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/comp_type_extra"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/spinner_company_duty"
                android:text="@string/duty"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_company_duty"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/comp_type_extra"
                android:background="@android:color/white"
                android:drawSelectorOnTop="true"
                android:padding="10dp"
                android:prompt="@string/choose" />

            <TextView
                android:id="@+id/text_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/text_duty"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/input_company"
                android:text="@string/company"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/input_company"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/text_duty"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:hint="@string/enter_company"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorHint="@color/light_gray" />

            <TextView
                android:id="@+id/sex_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/text_company"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/layout_gender"
                android:text="@string/gender"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/layout_gender"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/text_company"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <Button
                    android:id="@+id/button_male"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_boarder_before"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="@string/male"
                    android:textColor="@color/light_gray" />

                <Button
                    android:id="@+id/button_female"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_boarder_before"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="@string/female"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <TextView
                android:id="@+id/age_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/sex_extra"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/text_birthday"
                android:text="@string/birthday"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_birthday"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/sex_extra"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_toeic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/age_extra"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/editText_toeic"
                android:text="@string/toeic_score"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText_toeic"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/age_extra"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:hint="@string/enter_toeic_score"
                android:inputType="number"
                android:maxLength="3"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorHint="@color/light_gray" />

            <TextView
                android:id="@+id/text_certif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/text_toeic"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/certif_input"
                android:text="@string/certificate"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/certif_input"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/text_toeic"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:hint="@string/add"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorHint="@color/light_gray"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/text_certif"
                android:background="@color/mint" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_my_info_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:background="@android:color/white"
        android:text="@string/save"
        android:textColor="@color/mint"
        android:textSize="20sp" />

</RelativeLayout>